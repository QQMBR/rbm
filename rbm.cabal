Name:                rbm
Version:             0.0
Description:         restricted boltzman machine
Author:              anatoly yakovenko
Build-Type:          Simple
Cabal-Version:       >=1.2

Library
  exposed-modules:   RBM
  Build-Depends:     base,
                     random,
                     mtl,
                     deepseq,
                     accelerate,
                     QuickCheck,
                     criterion

Test-Suite test-RBM
    type:       exitcode-stdio-1.0
    main-is:    RBM.hs
    ghc-options:  -O3 -main-is RBM.test -Werror -Wall

Benchmark perf-RBM
    type:       exitcode-stdio-1.0
    ghc-options:  -O3 -main-is RBM.perf -Werror -Wall
    main-is:    RBM.hs
